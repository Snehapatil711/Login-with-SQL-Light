        <Button
            android:id="@+id/Submit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textSize="25dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_bg"/>

    </LinearLayout>

